<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_percent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yannis.dianming.activity.SetPercentActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/back"
            android:textColor="@color/maincolor" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_percent"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/maincolor"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graywhite"
        android:layout_below="@+id/title"/>

    <TextView
        android:id="@+id/chooseCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_course"
        android:textSize="16sp"
        android:layout_below="@+id/view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/courseEditView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chooseCourse"
        android:layout_toRightOf="@+id/chooseCourse"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:padding="8dp"
        android:hint="@string/choose_course"
        android:layout_alignParentRight="true"
        android:editable="false"
        android:background="@drawable/editview"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/chooseCourse"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">
    </com.github.mikephil.charting.charts.PieChart>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/chart"/>


    <TextView
        android:id="@+id/abcent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abcent_punish"
        android:textSize="16sp"
        android:layout_below="@+id/seekbar"
        android:layout_margin="12dp"/>
    <EditText
        android:id="@+id/punishEdit"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_toRightOf="@+id/abcent"
        android:background="@drawable/editview"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:inputType="number"
        android:layout_alignBaseline="@+id/abcent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分/人/次"
        android:textSize="14sp"
        android:layout_below="@+id/seekbar"
        android:layout_toRightOf="@+id/punishEdit"
        android:layout_alignBaseline="@+id/punishEdit"
        android:layout_margin="6dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/punishEdit"
        android:layout_margin="8dp"
        android:text="@string/submit"
        android:textSize="18sp"
        android:padding="6dp"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_selector"/>

</RelativeLayout>

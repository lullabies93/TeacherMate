<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/studentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/studentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentName"
            android:text="number"
            android:textColor="@color/lightblack"
            android:textSize="14sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/leave"
        android:background="@mipmap/oval_94_copy_3"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/leave"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:gravity="center"
        android:text="5"
        android:id="@+id/late"
        android:textColor="@color/white"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@mipmap/oval_94_copy_2"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/late"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="5"
        android:id="@+id/absence"
        android:textColor="@color/white"
        android:background="@mipmap/oval_94_copy"/>
</RelativeLayout>
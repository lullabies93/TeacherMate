<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mark_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yannis.dianming.activity.MarkInputActivity">

    <com.example.yannis.dianming.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/left_scroll"
                layout="@layout/scroll_item"/>

            <include
                android:id="@+id/right_scroll"
                layout="@layout/scroll_item"/>

            <include
                android:id="@+id/center_scroll"
                layout="@layout/scroll_item"/>
        </LinearLayout>
    </com.example.yannis.dianming.widget.ScrollView>

</RelativeLayout>
